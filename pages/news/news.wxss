page {
  background-color: #f5f5f5;
}

.news-card {
  width: 690rpx;
  margin: 30rpx auto;
  border: 2rpx #ccc solid;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 6rpx 30rpx 2rpx #e3dede;
}

.img {
  width: 630rpx;
  height: 360rpx;
  margin: 30rpx 30rpx 0 30rpx;
}

.title {
  font-size: 28rpx;
  color: #333;
  margin: 20rpx 30rpx 0rpx 30rpx;
}

.date {
  font-size: 22rpx;
  color: #b3b3b3;
  text-align: right;
  margin: 0 30rpx 30rpx 30rpx;
}
